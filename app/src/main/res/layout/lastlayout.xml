<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="10dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please touch screen on each of the scale below to assign corresponding risk for this patient !"
        android:id="@+id/textView3"
        android:gravity="center"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Admission to Intensive Care Unit for longer than 48 hrs !"
        android:id="@+id/textView4"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="40dp"
        android:textStyle="bold|italic"
        android:layout_marginRight="5dp"
        android:textSize="17sp" />
    <SeekBar
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginTop="5dp"
        android:max="100"
        android:id="@+id/custom_seekbar1"
        android:thumb="@drawable/thumb"
        android:progressDrawable="@drawable/custom_progress"
        android:progress="60"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your Prediction is 61%"
        android:id="@+id/textView5"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginTop="20dp"
        android:textStyle="bold|italic"
        android:layout_marginRight="5dp"
        android:textSize="17sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Acute kidney Injury(>=50% change in postoperative serum creatinine)?"
        android:id="@+id/textView6"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="20dp"
        android:textStyle="bold|italic"
        android:layout_marginRight="5dp"
        android:textSize="17sp" />

    <SeekBar
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginTop="5dp"
        android:max="100"
        android:id="@+id/custom_seekbar2"
        android:thumb="@drawable/thumb"
        android:progressDrawable="@drawable/custom_progress"
        android:progress="70"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your Prediction is 70%"
        android:id="@+id/textView7"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        android:layout_marginRight="5dp"
        android:textSize="17sp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/bsubmit"
            android:layout_marginTop="10dp"
            android:layout_gravity="center" />
    </LinearLayout>

</LinearLayout>
    </ScrollView>

</LinearLayout>
